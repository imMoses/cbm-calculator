<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomToolbarTextAlign">
        <attr name="text" format="string" />
        <attr name="navigationIcon" />
        <attr name="navigationIconTint" format="color|reference" />
        <attr name="hideNavBackButton" format="boolean" />
        <attr name="textAlignment" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
        </attr>
        <attr name="showButtonLogout" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomEditTextCalculation">
        <attr name="titleSection" format="string" />
        <attr name="unit" format="string" />
        <attr name="leftSymbol" format="string" />
        <attr name="valueTextAligment" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="disabledInputText" format="boolean" />
        <attr name="addFormulaInfo" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomTextViewLabelValue">
        <attr name="labelText" format="string" />
        <attr name="valueText" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomEditTextThreeColumns">
        <attr name="itemRowsLabel" format="string" />
        <attr name="enableBeratSatuan" format="boolean" />
        <attr name="enableTebal" format="boolean" />
        <attr name="enableQ" format="boolean" />
    </declare-styleable>

    <declare-styleable name="FormulaSetupEditText">
        <attr name="leftTextMainFormula" format="string" />
        <attr name="upperFormulaText" format="string" />
        <attr name="bottomFormulaText" format="string" />
        <attr name="unitFormula" format="string" />
        <attr name="alignmentText" format="enum">
            <enum name="leftText" value="0" />
            <enum name="rightText" value="1" />
        </attr>
        <attr name="disabledInputEditText" format="boolean" />
    </declare-styleable>

</resources>