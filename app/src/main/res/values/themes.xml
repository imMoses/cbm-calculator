<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CBMcalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/cbm_font_family</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/MaterialButtonCustom</item>
    </style>

    <style name="Theme.AppCompat.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
<!--        <item name="windowSplashScreenBackground">@color/...</item>-->

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <!-- Required for animated icons. -->
        <item name="windowSplashScreenAnimationDuration">250</item>
        <!-- Set the theme of the Activity that directly follows your splashscreen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.CBMcalculator</item>
    </style>

    <style name="MaterialButtonCustom" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
    </style>

    <style name="edittext_style">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:paddingTop">@dimen/_6sdp</item>
        <item name="android:paddingStart">@dimen/_6sdp</item>
        <item name="android:paddingEnd">@dimen/_6sdp</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="edittext_style_grey">
        <item name="android:background">@drawable/bg_edittext_grey</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>